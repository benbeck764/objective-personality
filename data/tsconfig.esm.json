{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/prisma/**/*", "src/generated/**/*"]
}
